CompileFlags:
  Add:
    # C++17 стандарт
    - -std=c++17
    # Предупреждения
    - -Wall
    - -Wextra
    # Qt5 фреймворк - макросы
    - -DQT_WIDGETS_LIB
    - -DQT_GUI_LIB
    - -DQT_CORE_LIB
    # Пути к заголовкам Qt5 (Arch Linux)
    # Порядок важен! Специфичные пути модулей должны быть ПЕРЕД общим путем
    - -I/usr/include/qt/QtWidgets
    - -I/usr/include/qt/QtGui
    - -I/usr/include/qt/QtCore
    - -I/usr/include/qt
    # Стандартные пути для системных библиотек
    - -I/usr/include
    # Пути к заголовкам проекта (относительно корня проекта)
    - -I.
    - -Isrc
    - -Isrc/core
    - -Isrc/algorithms
    - -Isrc/generation
    - -Isrc/gui
    - -Isrc/io
    - -Isrc/tests

Diagnostics:
  # Отключаем некоторые предупреждения, которые могут мешать
  UnusedIncludes: None
  MissingIncludes: None

Index:
  # Настройки индексации
  Background: Build

InlayHints:
  # Подсказки в коде
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
